<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <solid
                android:color="@color/colorProgressbarBg"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/colorProgressbarProgressStart"
                    android:centerColor="@color/colorProgressbarProgressCenter"

                    android:endColor="@color/colorProgressbarProgressEnd"
                    android:angle="180"
                    />
            </shape>
        </clip>
    </item>
</layer-list>