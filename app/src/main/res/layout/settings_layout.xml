<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_view_settings">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_back"
        android:onClick="onClickBack"
        android:textColor="#FFF"
        android:visibility="visible"
        android:contentDescription="@string/back_settings"
        android:background="?android:selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/text_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:labelFor="@id/switch_notification"
        android:text="@string/settings_notifications_text"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/text_shop"
        app:layout_constraintTop_toBottomOf="@id/text_shop" />

    <Switch
        android:id="@+id/switch_sounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:theme="@style/switchStyle"
        app:layout_constraintStart_toStartOf="@+id/switch_notification"
        app:layout_constraintTop_toBottomOf="@+id/switch_notification" />

    <Switch
        android:id="@+id/switch_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="57dp"
        android:theme="@style/switchStyle"
        app:layout_constraintStart_toEndOf="@+id/text_notification"
        app:layout_constraintTop_toBottomOf="@+id/text_shop" />

    <TextView
        android:id="@+id/text_sounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:labelFor="@id/switch_sounds"
        android:text="@string/settings_sound_text"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/text_notification"
        app:layout_constraintTop_toBottomOf="@+id/text_notification" />

    <ImageButton
        android:id="@+id/button_shop"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="180dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:contentDescription="@string/open_shop"
        android:src="@drawable/ic_shop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/button_about"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="90dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:contentDescription="@string/open_about"
        android:onClick="openAbout"
        android:src="@drawable/ic_about"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/button_shop"
        android:text="@string/settings_customizations_text"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/button_shop"
        app:layout_constraintStart_toStartOf="@id/button_shop"
        app:layout_constraintTop_toBottomOf="@id/button_shop" />

    <TextView
        android:id="@+id/text_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/button_about"
        android:text="@string/settings_about_text"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/button_about"
        app:layout_constraintStart_toStartOf="@+id/button_about"
        app:layout_constraintTop_toTopOf="@+id/text_shop" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.279"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_sounds">

        <RadioButton
            android:id="@+id/radio_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:buttonTint="#333"
            android:textColor="@color/colorText"
            android:onClick="changeLanguage"
            android:text="@string/radio_english" />

        <RadioButton
            android:id="@+id/radio_finnish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:buttonTint="#333"
            android:textColor="@color/colorText"
            android:onClick="changeLanguage"
            android:text="@string/radio_finnish" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>